<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_4sdp"/>

            <gradient
                android:endColor="#8448F4"
                android:startColor="#F4447E"
                android:type="linear" />


        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">


        <shape android:shape="rectangle" >

            <corners android:radius="@dimen/_4sdp"/>
            <solid android:color="#FDF7F8" />
        </shape>
    </item>

</layer-list>


