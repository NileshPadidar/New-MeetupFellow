            </RelativeLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPlayO"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:layout_below="@+id/replyChatLayO"
            android:layout_centerInParent="true"
            android:padding="@dimen/inner_img_l"
