            android:visibility="visible"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/ivChatStatus"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/tvChatMessage"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toStartOf="@+id/tvChatTime"
            android:background="@drawable/double_tick_seen"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_4sdp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/gifViewLay"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:layout_below="@+id/replyChatLayU"
            android:background="@drawable/drawable_chat_me"
            android:visibility="gone">

            <com.giphy.sdk.ui.views.GPHMediaView
                android:id="@+id/gifView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tvTimeGif"
                android:elevation="4dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvTimeGif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/gifView"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/montserrat_regular"
                android:maxWidth="@dimen/_200sdp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_button_xxxxs"
                android:visibility="visible"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/ivStatusGif"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_below="@+id/gifView"
                android:layout_marginEnd="@dimen/inner_img_xl"
                android:layout_marginRight="@dimen/inner_img_xl"
                android:layout_toStartOf="@+id/tvTimeGif"
                android:background="@drawable/double_tick_seen"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/flImage"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:layout_below="@+id/replyChatLayU"
            android:background="@drawable/drawable_chat_me"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/drawable_chat_me">

                <TextView
                    android:id="@+id/userNameChatImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:padding="@dimen/_4sdp"
                    android:text=""
                    android:textColor="#F4447E"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/downloadImgBtn"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@id/userNameChatImg"
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/_8sdp"
                    android:src="@drawable/upload__60"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/downloadProgress"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignTop="@+id/ivChatImage"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_8sdp"
                    android:progressBackgroundTint="@color/gradientEnd"
                    android:visibility="gone" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivChatImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/chatImgDate"
                    android:layout_below="@id/userNameChatImg"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/meetupsfellow_transpatent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivChatImageBlur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/chatImgDate"
                    android:layout_below="@id/userNameChatImg"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="#D2A9A9A9"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivChatStatusImg"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_below="@+id/ivChatImage"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/chatImgDate"
                    android:background="@drawable/double_tick_seen"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/chatImgDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="@dimen/_4sdp"
                    android:text="meetupsFellow"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button_xxxxs" />

            </RelativeLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPlay"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:layout_below="@+id/replyChatLayU"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_chat_me"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/userNameChatVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:padding="@dimen/_4sdp"
                    android:text=""
                    android:textColor="#F4447E"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivChatVideoPlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/chatVideoDate"
                    android:layout_below="@+id/userNameChatVideo"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/ivChatVideoBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_above="@+id/chatVideoDate"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/play" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/videoBlurImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/chatVideoDate"
                    android:layout_below="@+id/userNameChatVideo"
                    android:background="#D2A9A9A9"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/videoDownloadBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_above="@+id/chatVideoDate"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload__60"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivChatStatusVideo"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_below="@+id/ivChatVideoPlay"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/chatVideoDate"
                    android:background="@drawable/double_tick_seen"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/chatVideoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxWidth="@dimen/_200sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="meetupsFellow"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button_xxxxs" />

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flFile"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/replyChatLayU"
            android:layout_centerInParent="true"
            android:background="@drawable/drawable_chat_me"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/pdfPreviewImg"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/fileBgIv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#65858484"
                    app:layout_constraintBottom_toTopOf="@+id/chatFileDate"
                    app:layout_constraintTop_toBottomOf="@+id/pdfPreviewImg" />

                <ImageView
                    android:id="@+id/fileIconIv"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/ic_baseline_text_snippet_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pdfPreviewImg" />

                <TextView
                    android:id="@+id/fileNameTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:inputType="textMultiLine"
                    android:text="File Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fileIconIv"
                    app:layout_constraintTop_toTopOf="@+id/fileIconIv" />

                <TextView
                    android:id="@+id/fileSizeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="doc size"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/fileBgIv"
                    app:layout_constraintStart_toStartOf="@+id/fileNameTv" />

                <ImageView
                    android:id="@+id/fileDownload"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:background="@drawable/download_circular_button"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/fileSizeTv"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/ivChatStatusFile"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@drawable/double_tick_seen"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/chatFileDate"
                    app:layout_constraintEnd_toStartOf="@+id/chatFileDate"
                    app:layout_constraintTop_toTopOf="@+id/chatFileDate" />

                <TextView
                    android:id="@+id/chatFileDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxWidth="@dimen/_200sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="meetupsFellow"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button_xxxxs"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fileIconIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </RelativeLayout>


</RelativeLayout>