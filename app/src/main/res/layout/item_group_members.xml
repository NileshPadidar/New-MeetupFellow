<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llConversation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_8sdp"

    android:paddingStart="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="horizontal"


    tools:ignore="spUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_weight="0.85"

        >

        <ImageView
            android:id="@+id/ivUserImageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:contentDescription="@string/app_name"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:visibility="visible"

            />

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:padding="1dp"
            android:scaleType="centerCrop"


            />

        <!-- <ImageView
                 android:id="@+id/ivUserStatus"
                 android:layout_width="@dimen/inner_img_xl_2"
                 android:layout_height="@dimen/inner_img_xl_2"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginStart="0dp"
                 android:layout_marginLeft="0dp"
                 android:layout_marginTop="@dimen/inner_img_m"
                 android:layout_marginEnd="@dimen/inner_img_m"
                 android:layout_marginRight="@dimen/inner_img_m"
                 android:contentDescription="@string/app_name"
                 android:src="@drawable/selector_user_status"
                 android:visibility="gone" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/inner_img_xl_2"
        android:paddingLeft="@dimen/inner_img_xl_2"
        android:paddingTop="@dimen/inner_img_m"
        android:paddingEnd="0dp"
        android:paddingRight="0dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:ellipsize="end"
            android:inputType="textMultiLine"
            android:layout_toStartOf="@+id/rlOptions"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_button_s"
            tools:text="adsadawdddwddwd" />

        <TextView
            android:id="@+id/userStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUserName"
            android:text="Online"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:id="@+id/rlOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/adminTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/moreOptions"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:visibility="visible"
                android:fontFamily="@font/montserrat_medium"
                />

            <TextView
                android:id="@+id/moreOptions"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="â‹®"
                android:gravity="center"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />



        </LinearLayout>



    </RelativeLayout>

</LinearLayout>