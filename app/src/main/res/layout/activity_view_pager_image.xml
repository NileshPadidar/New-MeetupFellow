<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B3000000"
    tools:context=".mvp.view.activities.ImagePagerActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:visibility="gone"
        android:background="@drawable/circle_back"
        android:backgroundTint="#99FFFFFF"
        android:drawableLeft="@drawable/back_arrow"
        android:gravity="center"
        android:paddingStart="@dimen/_4sdp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forward_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_5sdp"
        android:layout_margin="@dimen/_4sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:backgroundTint="#99FFFFFF"
        android:drawableLeft="@drawable/back_arrow"
        android:background="@drawable/circle_back"
        />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@drawable/trending_gradient_shape"/>-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ivImageClose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/circle_back"
        android:backgroundTint="#99FFFFFF"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:gravity="center"
        android:paddingStart="@dimen/_2sdp" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/inner_img_xxl"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:visibility="gone"
        app:tabBackground="@drawable/page_selector"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="7dp"
        app:tabPaddingStart="7dp" />

    <Button
        android:id="@+id/ivSendData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/round_corner_btn_new"
        android:text="Upload"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_26sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        />


</RelativeLayout>