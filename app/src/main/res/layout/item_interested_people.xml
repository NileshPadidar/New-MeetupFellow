<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="spUsage"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingTop="@dimen/_6sdp"
        android:baselineAligned="false">

    <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.84"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivInterestedUserImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"/>

    </LinearLayout>-->

    <RelativeLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:id="@+id/ivInterestedUserImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="@dimen/_2sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/meetupsfellow_transpatent" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/inner_img_m"
            android:paddingStart="@dimen/inner_img_xl_2"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/inner_img_xl_2">

        <TextView
            android:id="@+id/tvInterestedUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/tvInterestedUserDistance"
            android:layout_toLeftOf="@+id/tvInterestedUserDistance"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
                android:id="@+id/tvInterestedUserDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/text_size_button_xs"
                android:textColor="@color/colorMenuAddress"
                android:text="@string/text_distance"
                android:maxLines="1"
                android:layout_alignParentEnd="true"/>

        <TextView
                android:id="@+id/tvInterestedUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_description_text"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/inner_img_s"
                android:maxLines="1"
                android:layout_below="@+id/tvInterestedUserName"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/ivFavorite"
                android:layout_toStartOf="@+id/ivFavorite"
                android:textColor="@color/grey"
                android:drawablePadding="@dimen/inner_img_l"/>
       <!-- android:drawableLeft="@drawable/ic_location"
        android:drawableStart="@drawable/ic_location"-->

        <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="@dimen/inner_img_xxxl"
                android:layout_height="@dimen/inner_img_xxxl"
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:padding="@dimen/inner_img_s"
                android:layout_below="@+id/tvInterestedUserName"
                android:src="@drawable/selector_favorite"/>

    </RelativeLayout>

</LinearLayout>