<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llNotification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/inner_img_xxxl_1"
        android:paddingTop="@dimen/inner_img_m"
        android:paddingBottom="@dimen/inner_img_m"
        tools:ignore="spUsage">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.84">

        <ImageView
            android:id="@+id/ivNotificationImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>

        <ImageView
                android:id="@+id/ivUserStatus"
                android:layout_width="@dimen/inner_img_xl_2"
                android:layout_height="@dimen/inner_img_xl_2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="@dimen/inner_img_m"
                android:layout_marginEnd="@dimen/inner_img_m"
                android:layout_marginRight="@dimen/inner_img_m"
                android:contentDescription="@string/app_name"
                android:src="@drawable/selector_user_status"
                android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/inner_img_xl_2"
            android:paddingLeft="@dimen/inner_img_xl_2"
            android:paddingTop="@dimen/inner_img_m"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">

        <TextView
            android:id="@+id/tvNotificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            tools:text="@string/app_name" />

      <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivUnread"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/selector_read_unread" />
-->

      <!-- <TextView
            android:id="@+id/ivUnread"
            android:layout_width="@dimen/inner_img_xxl"
            android:layout_height="@dimen/inner_img_xxl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/inner_img_s"
            android:background="@drawable/drawable_user_offline"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button_xxxs"
            tools:text="99"
            android:visibility="gone"
            />-->



        <TextView
                android:id="@+id/tvNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                tools:text="@string/text_distance" />

        <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotificationMessage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/inner_img_s"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:textColor="@color/colorMenuAddress"
                android:textSize="@dimen/text_size_button_xs"
                android:visibility="gone"
                tools:text="@string/hint_text_hometown" />

    </RelativeLayout>

</LinearLayout>