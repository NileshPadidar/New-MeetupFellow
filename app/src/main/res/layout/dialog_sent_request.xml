<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_height="@dimen/_154sdp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send connection request"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_16sdp"
                />

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:maxLines="2"
                android:text="5 available direct message connection request"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_regular"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="@dimen/_11sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/round_corner_btn_new"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_btn_sent_massage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Direct msg"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/round_corner_btn_new"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_btn_direct_sent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send request"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/round_corner_btn_new"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-40dp"
        android:elevation="8dp"
        android:visibility="gone"
        android:src="@drawable/exit_icon3"
        android:padding="@dimen/_2sdp"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>