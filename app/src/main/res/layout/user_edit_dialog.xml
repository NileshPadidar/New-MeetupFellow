<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogEdTxtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Basic Details"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_medium"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/transparent"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:boxBackgroundColor="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogEdTxtAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_default"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Age"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingStart="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">

                <EditText
                    android:id="@+id/dob_picker_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_edit_txt"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/calendar"
                    android:drawableTint="@color/black"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Date of Birth"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/userAge_txt_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are 30 years old."
                android:paddingStart="@dimen/_8sdp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                />

            <TextView
                android:id="@+id/edTxtTitleEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_margin="@dimen/_16sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_medium"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="visible"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogEdTxtHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:hint="HomeTown"
                android:paddingStart="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/round_corners_default"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="visible"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogEdTxtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:clickable="false"
                android:hint="Email"
                android:paddingStart="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/round_corners_default"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:id="@+id/userEditShortBiotxtlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                app:counterEnabled="true"
                app:counterMaxLength="150"
                android:visibility="visible"
                android:isScrollContainer="true"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userEditShortBiotxt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/round_corners_default"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Short Bio"
                    android:paddingStart="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:maxLines="6"
                    android:gravity="top"
                    android:visibility="visible"
                    android:enabled="true"
                    android:minLines="2"
                    android:scrollbars="vertical"
                    android:isScrollContainer="true"
                    android:nestedScrollingEnabled="true"
                    android:focusable="true"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialogUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_corner_btn_new"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/montserrat_medium"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>