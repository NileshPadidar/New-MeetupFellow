<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/inner_img_xxxl_1"
        android:layout_marginRight="@dimen/inner_img_xxl"
        android:layout_marginLeft="@dimen/inner_img_xxl"
        android:background="@drawable/drawable_rounded_corners_option"
        android:padding="@dimen/inner_img_xl"
        tools:ignore="spUsage">

    <TextView
            android:id="@+id/tvBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_block"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/inner_img_xl"
            android:textSize="@dimen/text_size_button_l"
            android:fontFamily="@font/montserrat_medium"/>

    <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"
             android:layout_marginBottom="@dimen/inner_img_xl"
        />

    <TextView
            android:id="@+id/tvClearChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_clear_chat"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_button_l"
            android:fontFamily="@font/montserrat_medium"/>

</LinearLayout>