<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otp_sr"
    android:visibility="visible"
    tools:context=".mvp.view.activities.LoginWithEmailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/curv_background_main" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/iv_login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Welcome Back!"
                android:layout_marginVertical="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:text="Your new password must be \n different from previously used \n password."
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

          <!--  <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/userEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46sdp"
                    android:background="@drawable/round_corners_default"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Email"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/iv_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/light_dark_text"
                    android:textColorHint="@color/light_dark_text"
                    android:textSize="@dimen/_13sdp" />
            </com.google.android.material.textfield.TextInputLayout>
-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_default"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Email"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/iv_email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MyTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/transparent"
                app:boxBackgroundColor="@color/transparent"
                app:passwordToggleTint="@color/black"
                app:passwordToggleDrawable="@null"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_default"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Password"
                    android:paddingStart="@dimen/_16sdp"
                    android:maxLength="18"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRecoverPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Recover  Password"
                android:layout_marginVertical="@dimen/_16sdp"
                android:textColor="@color/darkParpul"
                android:textSize="@dimen/_12sdp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/round_corner_btn_new"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Or login with"
                android:textColor="@color/light_dark_text"
                android:textSize="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_email_login"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:visibility="gone"
                    android:background="@drawable/login_gmail" />
                <ImageView
                    android:id="@+id/iv_mobile_login"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/login_mobile" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/label_not_member"
                android:textColor="@color/light_dark_text"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include android:id="@+id/included_loading"
        layout="@layout/layout_loading"/>
</androidx.constraintlayout.widget.ConstraintLayout>