<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        android:layout_marginBottom="-16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_cancel"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MeetupsFellow"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_weight="9"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/ic_stat_close"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_bottom_sheet_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="Please set your private album access"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bottom_sheet_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/rounded_corners_filter_selected"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Public"
                    android:textAllCaps="false"
                    android:textColor="@color/gradientEnd" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_privet_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_public"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/rounded_corners_filter_selected"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Private"
                    android:textAllCaps="false"
                    android:textColor="@color/gradientEnd" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_my_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_privet_public"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/rounded_corners_filter_selected"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="My connection only"
                    android:textAllCaps="false"
                    android:textColor="@color/gradientEnd" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_my_connection"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/rounded_corners_filter_selected"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Selected connection"
                    android:textAllCaps="false"
                    android:textColor="@color/gradientEnd" />

            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>