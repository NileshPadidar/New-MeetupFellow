<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTermsGray</item>
        <item name="android:listDivider">@drawable/divider_gray</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:itemBackground">@color/grey</item>-->
    </style>

    <style name="AppThemeCreate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTermsGray</item>
        <item name="android:listDivider">@drawable/divider_gray</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:forceDarkAllowed">false</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:itemBackground">@color/grey</item>-->
    </style>

</resources>